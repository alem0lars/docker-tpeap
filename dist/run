#!/bin/bash

function stopTpeap {
  /opt/tplink/EAPController/bin/control.sh stop
  exit
}

trap stopTpeap EXIT

echo "Starting tp-link EAP controller (may take a while).." 1>&2
/opt/tplink/EAPController/bin/control.sh start 2> /dev/null

while true; do
  _expected_msg="EAP Controller is running."
  _status=$(tpeap status)
  if [[ "$_status" = "$_expected_msg" ]]; then
    echo "EAP Controller successfully started!"
    break
  fi
  unset _expected_msg
  unset _status
  sleep 1
done

while true; do
  sleep 8
done
